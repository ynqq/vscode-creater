{
  "name": "cmc-component-creater",
  "displayName": "cmc-component-creater",
  "description": "",
  "version": "0.0.8",
  "engines": {
    "vscode": "^1.81.0"
  },
  "publisher": "ynqq",
  "categories": [
    "Other"
  ],
  "repository": {
    "url": "https://github.com/ynqq/vscode-creater"
  },
  "icon": "images/icon.png",
  "activationEvents": [
    "onLanguage:vue"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cmcComponentsCreater.emptyModalFile",
        "title": "创建空Modal"
      },
      {
        "command": "cmcComponentsCreater.infoModalFile",
        "title": "创建需要请求接口的Modal"
      },
      {
        "command": "cmcComponentsCreater.formModalFile",
        "title": "创建带有表单的Modal"
      },
      {
        "command": "cmcComponentsCreater.infoFormModalFile",
        "title": "创建带有表单和请求接口的Modal"
      },
      {
        "command": "cmcComponentsCreater.emptyDrawerFile",
        "title": "创建空Drawer"
      },
      {
        "command": "cmcComponentsCreater.infoDrawerFile",
        "title": "创建需要请求接口的Drawer"
      },
      {
        "command": "cmcComponentsCreater.formDrawerFile",
        "title": "创建带有表单的Drawer"
      },
      {
        "command": "cmcComponentsCreater.infoFormDrawerFile",
        "title": "创建带有表单和请求接口的Drawer"
      },
      {
        "command": "copy.fileNameAndSuffix",
        "title": "复制文件名称-带后缀"
      },
      {
        "command": "copy.fileName",
        "title": "复制文件名称"
      },
      {
        "command": "copy.folderName",
        "title": "复制文件夹名称"
      }
    ],
    "menus": {
      "editor/title/context": [
        {
          "command": "copy.fileNameAndSuffix",
          "when": "resourceLangId=~ /.*/",
          "group": "copy0"
        },
        {
          "command": "copy.fileName",
          "when": "resourceLangId=~ /.*/",
          "group": "copy0"
        }
      ],
      "editor/context": [
        {
          "command": "copy.fileName",
          "when": "editorFocus && resourceLangId=~ /.*/",
          "group": "copy0"
        },
        {
          "command": "copy.fileNameAndSuffix",
          "when": "editorFocus && resourceLangId=~ /.*/",
          "group": "copy0"
        }
      ],
      "explorer/context": [
        {
          "submenu": "createModal",
          "when": "explorerResourceIsFolder",
          "group": "file0"
        },
        {
          "submenu": "createDrawer",
          "when": "explorerResourceIsFolder",
          "group": "file1"
        },
        {
          "command": "copy.folderName",
          "when": "explorerResourceIsFolder",
          "group": "copy0"
        },
        {
          "command": "copy.fileNameAndSuffix",
          "when": "resourceLangId=~ /.*/",
          "group": "copy0"
        },
        {
          "command": "copy.fileName",
          "when": "resourceLangId=~ /.*/",
          "group": "copy0"
        }
      ],
      "createModal": [
        {
          "command": "cmcComponentsCreater.emptyModalFile",
          "group": "file00"
        },
        {
          "command": "cmcComponentsCreater.infoModalFile",
          "group": "file01"
        },
        {
          "command": "cmcComponentsCreater.formModalFile",
          "group": "file02"
        },
        {
          "command": "cmcComponentsCreater.infoFormModalFile",
          "group": "file03"
        }
      ],
      "createDrawer": [
        {
          "command": "cmcComponentsCreater.emptyDrawerFile",
          "group": "file10"
        },
        {
          "command": "cmcComponentsCreater.infoDrawerFile",
          "group": "file11"
        },
        {
          "command": "cmcComponentsCreater.formDrawerFile",
          "group": "file12"
        },
        {
          "command": "cmcComponentsCreater.infoFormDrawerFile",
          "group": "file13"
        }
      ]
    },
    "submenus": [
      {
        "id": "createModal",
        "label": "创建Modal"
      },
      {
        "id": "createDrawer",
        "label": "创建Drawer"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "build": "vsce package",
    "publish": "vsce package && vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "acorn": "^8.11.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  }
}
